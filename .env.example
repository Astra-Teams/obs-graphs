# --- Project settings ---
PROJECT_NAME=fastapi-template

# --- API server settings ---
HOST_BIND_IP=127.0.0.1
NUM_OF_UVICORN_WORKERS=1
HOST_PORT=8000
DEV_PORT=8001
TEST_PORT=8002

# --- GitHub settings ---
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# --- GitHub App Authentication ---
GITHUB_APP_ID=your_app_id
GITHUB_APP_PRIVATE_KEY_PATH=/path/to/private-key.pem
GITHUB_INSTALLATION_ID=your_installation_id
GITHUB_REPO_FULL_NAME=username/vault-repo-name

# --- Celery Configuration ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Workflow Configuration ---
WORKFLOW_CLONE_BASE_PATH=/tmp/obsidian-workflows
WORKFLOW_DEFAULT_BRANCH=main

# --- LLM Configuration (for agents) ---
OPENAI_API_KEY=your_openai_key

# --- Database settings ---
USE_SQLITE=true
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST_DB=fastapi-template-prod
POSTGRES_DEV_DB=fastapi-template-dev
POSTGRES_TEST_DB=fastapi-template-test
