# --- API Settings ---
PROJECT_NAME=obs-glx
OBS_GLX_DEBUG_MODE=true
OBS_GLX_API_SECRET_KEY=change-me-in-production
OBS_GLX_API_IMAGE=ghcr.io/asterismhq/obs-glx-api
OBS_GLX_WORKER_IMAGE=ghcr.io/asterismhq/obs-glx-worker
HOST_BIND_IP=127.0.0.1
NUM_OF_UVICORN_WORKERS=1
HOST_PORT=8000
DEV_PORT=8001
TEST_PORT=8002

# --- GitHub Token for Private Repositories ---
# Required for Docker builds to access private GitHub repositories
# Create a Personal Access Token at: https://github.com/settings/tokens
# Token needs 'repo' scope for private repository access
OBS_GLX_TOKEN=

# --- Service Toggles ---
USE_SQLITE=true
USE_MOCK_REDIS=true
# Always leave enabled for automated tests; set to false only when a live
# starprobe API is available.
USE_MOCK_STARPROBE=true
# Toggle nexus gateway mocking; keep true until the gateway API is wired.
USE_MOCK_NEXUS=true
OBS_GTWY_API_URL=http://nexus-api:8000
OBS_GTWY_TIMEOUT_SECONDS=30.0

# --- Stella Connector (stl-conn) Configuration ---
STL_CONN_BASE_URL=http://localhost:8000
STL_CONN_TIMEOUT=30.0
USE_MOCK_STL_CONN=true

# --- Research Service Configuration ---
# Research API endpoint (development default uses in-network alias; production should use external URL)
RESEARCH_API_URL=http://research-api:8000/research
RESEARCH_API_TIMEOUT_SECONDS=300.0

# --- Database Settings ---
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST_DB=obs-graph-prod
POSTGRES_DEV_DB=obs-graph-dev
POSTGRES_TEST_DB=obs-graph-test

# --- Redis Settings ---
OBS_GLX_REDIS_HOST=redis
OBS_GLX_REDIS_PORT=6379
OBS_GLX_CELERY_BROKER_URL=redis://redis:6379/0
OBS_GLX_CELERY_RESULT_BACKEND=redis://redis:6379/0


# --- Workflow Settings ---
WORKFLOW_TEMP_DIR_CLEANUP_SECONDS=86400
