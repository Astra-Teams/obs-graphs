# --- API Settings ---
OBS_GLX_PROJECT_NAME=obs-glx
OBS_GLX_DEBUG_MODE=true
OBS_GLX_API_SECRET_KEY=change-me-in-production
OBS_GLX_HOST_BIND_IP=127.0.0.1
OBS_GLX_NUM_OF_UVICORN_WORKERS=1
OBS_GLX_HOST_PORT=8000
OBS_GLX_DEV_PORT=8001
OBS_GLX_TEST_PORT=8002

# --- GitHub Token for Private Repositories ---
# Required for Docker builds to access private GitHub repositories
# Create a Personal Access Token at: https://github.com/settings/tokens
# Token needs 'repo' scope for private repository access
OBS_GLX_TOKEN=

# --- Service Toggles ---
OBS_GLX_USE_SQLITE=true
OBS_GLX_USE_MOCK_REDIS=true
# Always leave enabled for automated tests; set to false only when a live
# starprobe API is available.
OBS_GLX_USE_MOCK_STARPROBE=true
# Toggle GitHub draft service mocking; disable when real GitHub integration is configured.
OBS_GLX_USE_MOCK_GITHUB=true
OBS_GLX_USE_MOCK_STL_CONN=true

# --- Stella Connector (stl-conn) Configuration ---
STL_CONN_BASE_URL=http://localhost:8000
STL_CONN_TIMEOUT=30.0

# --- Starprobe Service Configuration ---
# Starprobe API endpoint (development default uses in-network alias; production should use external URL)
STARPROBE_API_URL=http://starprobe-api:8000/research
STARPROBE_API_TIMEOUT_SECONDS=300.0

# --- GitHub Draft Service Configuration ---
# Provide credentials to allow obs-glx to create draft branches directly.
OBS_GLX_GITHUB_TOKEN=
OBS_GLX_GITHUB_REPO=
OBS_GLX_GITHUB_BASE_BRANCH=main
OBS_GLX_DRAFTS_DIRECTORY=drafts
OBS_GLX_GITHUB_API_URL=https://api.github.com
OBS_GLX_GITHUB_API_VERSION=2022-11-28

# --- Database Settings ---
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST_DB=obs-graph-prod
POSTGRES_DEV_DB=obs-graph-dev
POSTGRES_TEST_DB=obs-graph-test

# --- Redis Settings ---
OBS_GLX_REDIS_HOST=redis
OBS_GLX_REDIS_PORT=6379
OBS_GLX_CELERY_BROKER_URL=redis://redis:6379/0
OBS_GLX_CELERY_RESULT_BACKEND=redis://redis:6379/0


# --- Workflow Settings ---
OBS_GLX_WORKFLOW_TEMP_DIR_CLEANUP_SECONDS=86400
OBS_GLX_WORKFLOW_DEFAULT_BRANCH=main
